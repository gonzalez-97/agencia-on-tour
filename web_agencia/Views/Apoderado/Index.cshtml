
@{
    ViewBag.Title = "Apoderado";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <a href="@Url.Action("Registro","Apoderado")">
                <div class="card border-primary mb-3" style="max-width: 18rem;">
                    <div class="card-body text-primary text-center">
                        <h5 class="card-title">Registro Apoderado</h5>
                        <p class="card-text">Si aún no estas registrado como apoderado, pincha aquí.</p>
                        <span class="btn btn-primary">Llevame allí</span>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-sm-4">
            <a href="@Url.Action("Registro","Alumno")">
                <div class="card border-primary mb-3" style="max-width: 18rem;">
                    <div class="card-body text-primary text-center">
                        <h5 class="card-title">Registro Alumno</h5>
                        <p class="card-text">Si quieres registrar un nuevo alumno, pincha aquí.</p>
                        <span class="btn btn-primary">Llevame allí</span>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-sm-4">
            <a href="#">
                <div class="card border-primary mb-3" style="max-width: 18rem;">
                    <div class="card-body text-primary text-center">
                        <h5 class="card-title">Nuevo Pago</h5>
                        <p class="card-text">Si necesitas realizar un deposito para tu pupilo, pincha aquí.</p>
                        <span class="btn btn-primary">Llevame allí</span>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-sm-4">
            <a href="#">
                <div class="card border-primary mb-3" style="max-width: 18rem;">
                    <div class="card-body text-primary text-center">
                        <h5 class="card-title">Pagos Realizados</h5>
                        <p class="card-text">Quieres ver el historal de pagos, pincha aquí</p>
                        <span class="btn btn-primary">Llevame allí</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {

           $.get("/apoderado/existe-apoderado", function (data) {
              var respuesta = JSON.parse(data);
              if (!respuesta)
                  ApoderadoNoExiste();

           });
        });

        function ApoderadoNoExiste()
        {
            var type = ['', 'info', 'danger', 'success', 'warning', 'rose', 'primary'];

            var color = Math.floor((Math.random() * 6) + 1);

            $.notify({
                icon: "add_alert",
                message: "Agencia On-tour te recuerda que debes registrarte como apoderado! <br> <a href='/apoderado/registro'>Registrarse Aqui! </a> "
            }, 
            {
               type: type[color],
               timer: 5000,
               placement: {
                  from: 'top',
                  align: 'right'
               }
            });
        }
    </script>
}
    