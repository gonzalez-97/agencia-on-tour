
@{
    ViewBag.Title = "Administrador";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <a href="@Url.Action("Nuevo","Contrato")">
                <div class="card border-primary mb-3" style="max-width: 18rem;">
                    <div class="card-body text-primary text-center">
                        <h5 class="card-title">Nuevo Contrato</h5>
                        <p class="card-text">Agrega un nuevo contrato, <br /> pincha aquí.</p>
                        <span class="btn btn-primary">Llevame allí</span>
